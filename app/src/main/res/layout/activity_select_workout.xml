<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewSelectWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Select Workout"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/cardviewMountainClimber"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="87dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded"
            android:orientation="vertical"

            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textViewMountainClimber"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Mountain climber"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewDurationMountainClimber"
                        android:layout_width="167dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="10dp"
                        android:text="01:00"
                        android:textColor="#000"
                        android:textSize="19dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/imageViewMountainClimber"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    app:srcCompat="@drawable/montain_climber" />
            </TableRow>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cardviewHighStepping"
        android:layout_width="409dp"
        android:layout_height="117dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="87dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded"
            android:orientation="vertical"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textViewHighStepping"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="High Stepping"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewDurationHighStepping"
                        android:layout_width="167dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="10dp"
                        android:text="01:30"
                        android:textColor="#000"
                        android:textSize="19dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/imageViewHighStepping"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    app:srcCompat="@drawable/high_stepping" />
            </TableRow>
        </LinearLayout>
    </LinearLayout>





</LinearLayout>